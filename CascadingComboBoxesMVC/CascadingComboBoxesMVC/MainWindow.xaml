<Window x:Class="CascadingComboBoxesMVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CascadingComboBoxesMVC"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <ComboBox x:Name="cbxEstados" DisplayMemberPath="UF" SelectedValuePath="EstadoID" HorizontalAlignment="Left" Margin="118,116,0,0" VerticalAlignment="Top" Width="366" SelectionChanged="cbxEstados_SelectionChanged"/>
        <ComboBox x:Name="cbxCidades" DisplayMemberPath="Nome" SelectedValuePath="CidadeID" HorizontalAlignment="Left" Margin="118,143,0,0" VerticalAlignment="Top" Width="366"/>
    </Grid>
</Window>
